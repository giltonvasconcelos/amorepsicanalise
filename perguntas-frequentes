    <script>
        // Função para abrir/fechar as perguntas
        function toggleFaq(element) {
            const faqItem = element.parentElement;
            faqItem.classList.toggle('active');
            
            // Muda o ícone de + para x
            const icone = element.querySelector('.icone');
            if (faqItem.classList.contains('active')) {
                icone.textContent = '×';
            } else {
                icone.textContent = '+';
            }
        }
        
        // Abre a primeira pergunta por padrão (opcional)
        window.onload = function() {
            // Descomente a linha abaixo se quiser que a primeira pergunta já venha aberta
            // document.querySelector('.faq-item').classList.add('active');
        }
    </script>
